extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 clist[0].NomeInstituicao: #{nipc}
    .w3-container
      table.w3-table-all
        tr 
          th Id
          th Inicio do Contrato
          th Fim do Contrato
          th Área de Investigação
        
        each c in clist
          tr
            td
              a(href="/"+ c._id)= c._id
            td= c.DataInicioContrato
            td= c.DataFimContrato
            td= c.AreasInvestigacao
              
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023-Normal in #{d}
    